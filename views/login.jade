doctype html
html
	head
		title home
		link(rel='stylesheet', href='stylesheets/login.css')
	body
		div(class='login')
			h2 What are you talking about?
			div(class='login-top')
				h1 登录
				//- form(action='/login' method='post' role='form')
				input(id='userName' type="text" name='userName' placeholder="请输入用户名")
				input(id='password' type="password" name='password' placeholder="请输入密码")
				div(class='forgot')
					input(class='upload' type="submit" value="Login" onclick='login()')
			div(class="login-bottom")
				h3 新用户 &nbsp;
					a(href="./register" id="toRegister") 请注册
	script(src='/javascripts/jquery.min.js')
	script.
		function login() {

		    var body = { 'userName': $("#userName").val(), 'password': $("#password").val() };
		    if((!$("#userName").val())||(!$("#password").val())){
		    	alert("用户名密码不能为空");
		    }else{
			    $.ajax({
			        url: '/login',
			        type: 'post',
			        dataType: 'json',
			        data: body,
			        success: function(data) {
			            if(data == '111'){
			            	alert('无此用户名');
			            } else if (data == '112'){
			            	alert('密码错误');
			            } else if (data == '200'){
			            	document.location = '../'
			            }
			        },
			        error: function(data) {
			        	console.log(data);
			        }

			    });		    
		    }

		}

